<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_post_article"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/_15sdp"
    android:paddingTop="@dimen/_15sdp"
    android:paddingEnd="@dimen/_15sdp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_bold"
            android:text="@string/post_article_"
            android:textColor="@color/main_category_text_color"
            android:textSize="@dimen/_18sdp" />

        <RelativeLayout
            android:id="@+id/uploadMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/uploadIcon"
                android:fontFamily="@font/muli_semi_bold"
                android:text="@string/upload_media"
                android:textColor="@color/main_category_text_color"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/uploadIcon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_uplaod_media" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/uploadNewsReel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/uploadNewsReelIcon"
                android:fontFamily="@font/muli_semi_bold"
                android:text="@string/upload_news_reel"
                android:textColor="@color/main_category_text_color"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/uploadNewsReelIcon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_upload_newsreels" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/uploadYoutubeLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/uploadYoutubeLinkIcon"
                android:fontFamily="@font/muli_semi_bold"
                android:text="@string/upload_youtube_link"
                android:textColor="@color/main_category_text_color"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/uploadYoutubeLinkIcon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_upload_youtube_link" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>