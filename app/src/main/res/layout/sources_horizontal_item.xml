<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_130sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:translationZ="4dp"
        app:cardBackgroundColor="@color/source_card"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:scaleType="fitXY"
                android:src="@drawable/img_place_holder"
                app:riv_corner_radius="@dimen/_50sdp"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:ellipsize="end"
                android:fontFamily="@font/muli_bold"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textAlignment="center"
                android:textColor="@color/textSmall"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/follow"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_alignParentEnd="true"
        android:translationZ="@dimen/_10sdp"
        app:srcCompat="@drawable/ic_bookmark_unselected_black" />

    <RelativeLayout
        android:id="@+id/follow_click"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentEnd="true"
        android:translationZ="@dimen/_11sdp" />


    <ProgressBar
        android:id="@+id/progress"
        android:layout_alignParentEnd="true"
        android:translationZ="@dimen/_10sdp"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:indeterminateTint="@color/main_category_text_color"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:translationZ="@dimen/_10sdp"
        android:weightSum="2">

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/muli_regular"
            android:includeFontPadding="false"
            android:layout_marginEnd="@dimen/_5sdp"
            android:maxLines="1"
            android:textColor="@color/textSmall"
            android:textSize="@dimen/_8sdp"
            android:visibility="visible" />

        <TextView
            android:layout_marginStart="@dimen/_5sdp"
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/muli_regular"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:textColor="@color/textSmall"
            android:textSize="@dimen/_8sdp"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>