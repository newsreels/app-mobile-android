<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:fontFamily="@font/muli_bold"
            android:includeFontPadding="false"
            android:text="@string/report_concern"
            android:textColor="@color/main_category_text_color"
            android:textSize="@dimen/_20sdp" />


        <EditText
            android:id="@+id/report_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:backgroundTint="@color/primaryRed"
            android:fontFamily="@font/muli_regular"
            android:hint="@string/enter_here"
            android:includeFontPadding="false"
            android:textColor="@color/splash_text"
            android:textColorHint="@color/textSmallGrey"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/shape_with_stroke_grey"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/canceltxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:fontFamily="@font/muli_regular"
                android:includeFontPadding="false"
                android:letterSpacing="0.2"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/textSmallGrey"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reportbtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/shape_with_stroke"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:fontFamily="@font/muli_semi_bold"
                android:includeFontPadding="false"
                android:letterSpacing="0.2"
                android:text="@string/report"
                android:textAllCaps="true"
                android:textColor="@color/primaryRed"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
