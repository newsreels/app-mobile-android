<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/no_article_found"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/category_menu"
    android:clickable="true"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/centerArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_weight="0.8"
            app:srcCompat="@drawable/ic_error_screen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:fontFamily="@font/muli_extra_bold"
                android:includeFontPadding="false"
                android:text="@string/Sorry_no_result_have_been_found"
                android:textAlignment="center"
                android:textColor="@color/main_category_text_color"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:fontFamily="@font/muli_regular"
                android:includeFontPadding="false"
                android:isScrollContainer="true"
                android:lineSpacingExtra="3dp"
                android:text="@string/sorry_we_cannot"
                android:textAlignment="center"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/_12sdp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/lets_go"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:visibility="gone"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/primaryRed"
                app:cardCornerRadius="@dimen/_20sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape"
                    android:minWidth="@dimen/_100sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/muli_extra_bold"
                        android:includeFontPadding="false"
                        android:letterSpacing="0.2"
                        android:text="@string/lets_go"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
