            <View
                android:id="@+id/username_text_1"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/skeleton_bg_item"
                app:layout_constraintStart_toStartOf="@+id/text_bottom_1"
                app:layout_constraintTop_toBottomOf="@+id/text_bottom_1" />

            <View
                android:id="@+id/user_sub_text_1"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/skeleton_bg_item"
                app:layout_constraintStart_toEndOf="@+id/username_text_1"
                app:layout_constraintTop_toTopOf="@+id/username_text_1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img_1"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:src="@color/skeleton_view_item"
                app:layout_constraintBottom_toBottomOf="@+id/top_img_1"
                app:layout_constraintStart_toStartOf="@+id/top_img_1"
                app:layout_constraintTop_toBottomOf="@+id/top_img_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>


