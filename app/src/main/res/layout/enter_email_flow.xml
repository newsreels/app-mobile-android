<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/roboto_black"
        android:text="@string/welcome_to_newsreels"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/let_s_start_with_your_email"
        android:textColor="@color/grey"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/email"
        android:textColor="@color/blacknew"
        android:textSize="@dimen/_12sdp" />

    <include
        android:id="@+id/edittextMain"
        layout="@layout/newsreels_edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp" />

    <TextView
        android:id="@+id/errorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/error"
        android:textSize="@dimen/_8sdp" />

    <include
        android:id="@+id/continue_"
        layout="@layout/fill_btn_wid_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_gravity="center"
    android:orientation="horizontal">
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:background="@color/greydull"/>
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/oor"
        android:gravity="center"
        android:textColor="@color/toolbar_icon"
        android:textSize="@dimen/_12sdp" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:background="@color/greydull"/>
</LinearLayout>
    <include
        android:id="@+id/google"
        layout="@layout/outline_google_btn_wid_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_10sdp" />

    <include
        android:id="@+id/facebook"
        layout="@layout/outline_facebook_btn_wid_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp" />

    <TextView
        android:id="@+id/termc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/by_continuing"
        android:textColor="@color/grey"
        android:visibility="gone"
        android:textSize="@dimen/_10sdp" />

<!--    <RelativeLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/_200sdp" />-->

</LinearLayout>
