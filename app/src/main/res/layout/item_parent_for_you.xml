<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_regular"
        android:lineSpacingExtra="3dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:textColor="@color/white"
        android:textDirection="locale"
        android:textSize="@dimen/_11sdp"
        tools:text="Technology" />

    <LinearLayout
        android:id="@+id/ll_category_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/bg_post_article_button"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_6sdp"
        android:paddingVertical="@dimen/_6sdp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_bold"
            android:lineSpacingExtra="3dp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:textColor="@color/white"
            android:textDirection="locale"
            android:textSize="@dimen/_10sdp"
            tools:text="Technology" />

    </LinearLayout>


    <im.ene.toro.widget.Container
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_category_header"
        android:clipToPadding="false"
        android:descendantFocusability="blocksDescendants" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFooter"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerview"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:drawableEnd="@drawable/ic_arrow_more"
        android:fontFamily="@font/muli_bold"
        android:letterSpacing="0.2"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_15sdp"
        android:textColor="@color/bullet_text"
        android:textSize="@dimen/_10sdp"
        app:backgroundTint="@color/heading_tabs"
        app:cornerRadius="8dp"
        tools:text="read more tech news dsads adad adsaddasd" />

</RelativeLayout>