<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/_15sdp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_sheet_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/share_bottom_sheet_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/save_story"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/saveIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_save" />

                    <ProgressBar
                        android:id="@+id/saveProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/gradient_progress"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/report"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:id="@+id/rpt"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/reportIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_report"
                        app:tint="@color/theme_color_1" />

                    <ProgressBar
                        android:id="@+id/reportProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/gradient_progress"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/less"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/not_interested"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:id="@+id/les"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/lessIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_dont_like"
                        app:tint="@color/theme_color_1" />

                    <ProgressBar
                        android:id="@+id/lessProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/gradient_progress"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gotoChannel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/source1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/go_to_guardian"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:id="@+id/gt"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/gotoIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_goto_guardian" />

                    <ProgressBar
                        android:id="@+id/gotoProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/gradient_progress"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/archive"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/archiveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/save"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:id="@+id/arc"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/archiveIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_fav" />

                    <ProgressBar
                        android:id="@+id/archiveProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/gradient_progress"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/share"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />


                <RelativeLayout
                    android:id="@+id/shr"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/shareIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_share" />

                    <ProgressBar
                        android:id="@+id/shareProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/gradient_progress"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/copy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/copy"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_copy" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/follow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/source2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/follow_guardian"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:id="@+id/flw"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/followIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_follow_guardian"
                        app:tint="@color/theme_color_1" />

                    <ProgressBar
                        android:id="@+id/followProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/gradient_progress"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/source3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_40sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_8sdp"
                    android:text="@string/"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:id="@+id/blk"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/blockIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_block"
                        app:tint="@color/theme_color_1" />

                    <ProgressBar
                        android:id="@+id/blockProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/gradient_progress"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/suggest_more_like_this"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:id="@+id/mr"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/moreIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_more_like_this"
                        app:tint="@color/theme_color_1" />

                    <ProgressBar
                        android:id="@+id/moreProgress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/gradient_progress"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/caption"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/captionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/caption_on"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="@dimen/_15sdp" />

                <RelativeLayout
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/captionIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_caption_off"
                        app:tint="@color/theme_color_1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/share_bottom_sheet_bg"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/sf_ui_display_bold"
                android:text="@string/cancel"
                android:textColor="@color/com_facebook_blue"
                android:textSize="@dimen/_15sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp" />

    </LinearLayout>

</LinearLayout>