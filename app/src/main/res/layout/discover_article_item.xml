<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardData"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_bullet_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/theme_color_1"
        android:textSize="@dimen/_24sdp"
        android:translationY="-4dp"
        app:layout_constraintBottom_toBottomOf="@+id/bullet_image_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bullet_image_m"
        app:layout_constraintVertical_bias="0.0"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_bullet_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/librefranklin_regular"
        android:maxLength="200"
        android:maxLines="4"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bullet_image_m"
        app:layout_constraintStart_toEndOf="@id/tv_bullet_rank"
        app:layout_constraintTop_toTopOf="@+id/bullet_image_m"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Why December 14, 2012 was darkest day of my presidency - Obama" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bullet_image_m"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.3:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".4">

        <ImageView
            android:id="@+id/bullet_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_grey"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

