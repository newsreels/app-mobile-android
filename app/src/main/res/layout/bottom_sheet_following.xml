<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_bold"
        android:includeFontPadding="false"
        android:text="@string/account_settings"
        android:textColor="@color/textHeader"
        android:textSize="@dimen/_18sdp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_grey"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:minHeight="@dimen/_45sdp"
            android:layout_height="wrap_content">

            <Button
                android:paddingStart="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:id="@+id/btn_remove"
                android:layout_width="match_parent"
                android:minHeight="@dimen/_45sdp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:fontFamily="@font/muli_bold"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="@string/unfollow"
                android:textAllCaps="false"
                android:textColor="@color/main_category_text_color"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/follow_icon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:src="@drawable/icn_unfollow"
                app:tint="@color/main_category_text_color" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rl_second"
            android:layout_width="match_parent"
            android:minHeight="@dimen/_45sdp"
            android:layout_height="wrap_content">

            <Button
                android:paddingStart="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:id="@+id/btn_block"
                android:layout_width="match_parent"
                android:minHeight="@dimen/_45sdp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:fontFamily="@font/muli_bold"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="@string/block"
                android:textAllCaps="false"
                android:textColor="@color/main_category_text_color"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/block_icon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_18sdp"
                android:src="@drawable/icn_block"
                app:tint="@color/main_category_text_color" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@color/grey" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:background="@android:color/transparent"
            android:drawablePadding="@dimen/_5sdp"
            android:elevation="0dp"
            android:fontFamily="@font/muli_bold"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/main_category_text_color"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

</LinearLayout>