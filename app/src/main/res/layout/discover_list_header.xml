<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/discover_card_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/muli_semi_bold"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:textAllCaps="true"
            android:textColor="@color/discover_card_grey_text"
            android:textSize="@dimen/_8sdp"
            tools:text="This is dummy data" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/muli_extra_bold"
        android:includeFontPadding="false"
        android:textAllCaps="false"
        android:textColor="@color/discover_card_title"
        android:textSize="@dimen/_24sdp"
        tools:text="This is dummy data" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/image_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/image_list_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="-50dp"
        android:paddingEnd="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/image_list_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp" />

</LinearLayout>